{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "types": ["node"]
  },
  "include": ["server.ts", "src/server/**/*"],
  "exclude": ["node_modules", ".next", "dist", "next.config.js", "src/app/**/*"]
}